<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<AnchorPane xmlns="http://javafx.com/javafx/8.0.101" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ru.dron.activevocabe.controllers.QuizFormController">
    <children>
        <VBox prefHeight="120" prefWidth="200" alignment="BASELINE_CENTER" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10">
            <children>
                <Text fx:id="question" text="question"/>
                <TextField fx:id="answer" promptText="your answer here" onAction="#onNextPressed"/>
            </children>
        </VBox>
        <HBox id="HBox" alignment="CENTER" minWidth="-1.0" spacing="5.0" AnchorPane.bottomAnchor="10.0" AnchorPane.rightAnchor="10.0">
            <opaqueInsets>
                <Insets bottom="10" top="10" left="10" right="10"/>
            </opaqueInsets>
            <children>
                <Button fx:id="nextButton" onAction="#onNextPressed" prefWidth="80.0" text="next" />
            </children>
        </HBox>
    </children>
</AnchorPane>